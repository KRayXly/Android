<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector ="@color/purple"
        android:cacheColorHint="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:background="@color/grey"
        android:showDividers="middle"
        android:gravity="center" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/choose_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/choose_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp">
            <Button
                android:id="@+id/pause_btn"
                android:layout_width="36dp"
                android:background="@mipmap/pause"
                android:layout_height="36dp" />
            <Button
                android:id="@+id/start_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/start" />
            <Button
                android:id="@+id/last_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/last" />
            <Button
                android:id="@+id/stop_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/stop" />
            <Button
                android:id="@+id/next_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/next" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>